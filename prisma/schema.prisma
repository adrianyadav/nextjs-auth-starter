generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String   @unique
  password String
  outfits  Outfit[]
}

model Outfit {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  imageUrl    String?
  tags        String[] // Array of tags like "casual", "formal", "summer", etc.
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}
